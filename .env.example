# Lovable MCP Gateway Configuration
# Copy to .env and fill in your values
# DO NOT commit real secrets to version control

# ============================================================================
# GATEWAY CONFIGURATION
# ============================================================================
# Do NOT commit real secrets. Use `fly secrets set` in production deployments.


# Bearer token for API authentication
# IMPORTANT: Defaults to "test-token" for development if not set
# MUST be explicitly set to a secure random token in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MCP_BEARER_TOKEN=your-secure-random-token-here

# Rate limiting (requests per minute per IP)
MCP_RATE_LIMIT_PER_MIN=10

# Global concurrency limit (max concurrent browser tasks)
MCP_AGENT_CONCURRENCY=3

# Agent retry configuration
MCP_AGENT_RETRY_MAX=2
MCP_AGENT_TIMEOUT_SEC=600

# Server port
PORT=8080

# ============================================================================
# SAIK0S LLM CONFIGURATION (OpenRouter)
# ============================================================================

# LLM Provider (required)
MCP_LLM_PROVIDER=openrouter

# OpenRouter API Key (required if using OpenRouter)
MCP_LLM_OPENROUTER_API_KEY=sk-or-your-api-key-here

# Model name (required)
MCP_LLM_MODEL_NAME=anthropic/claude-3.5-sonnet-20241022

# LLM temperature (0.0-2.0, default 0.2 for deterministic)
MCP_LLM_TEMPERATURE=0.2

# ============================================================================
# BROWSER CONFIGURATION
# ============================================================================

# Run browser in headless mode (true for production)
MCP_BROWSER_HEADLESS=true

# Browser window dimensions
MCP_BROWSER_WINDOW_WIDTH=1440
MCP_BROWSER_WINDOW_HEIGHT=1080

# ============================================================================
# AGENT TOOL CONFIGURATION
# ============================================================================

# Enable vision/screenshot analysis
MCP_AGENT_TOOL_USE_VISION=false

# Max steps per agent run
MCP_AGENT_TOOL_MAX_STEPS=60

# ============================================================================
# LOVABLE AUTHENTICATION
# ============================================================================

# Path to Playwright storage_state JSON (auth.json)
# Generate with: python scripts/save_auth_state.py ./auth.json
MCP_AUTH_STATE_PATH=./auth.json

# ============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# ============================================================================

# Custom Chrome/Chromium binary path
# MCP_BROWSER_BINARY_PATH=/path/to/chrome

# Custom user data directory
# MCP_BROWSER_USER_DATA_DIR=/path/to/user/data

# Keep browser open between calls
# MCP_BROWSER_KEEP_OPEN=false

# Playwright trace path (for debugging)
# MCP_BROWSER_TRACE_PATH=./traces

# Agent history path (for debugging)
# MCP_AGENT_TOOL_HISTORY_PATH=./history

# Server logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# MCP_SERVER_LOGGING_LEVEL=INFO

# Server log file (empty = stdout)
# MCP_SERVER_LOG_FILE=./logs/mcp_server.log

